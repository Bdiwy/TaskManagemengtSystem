@{
    ViewData["Title"] = "TaskBoard - Organize Your Work";
    Layout = "_Layout";
}

<style>
    .landing-hero {
        min-height: calc(100vh - 64px);
        display: flex;
        align-items: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        position: relative;
        overflow: hidden;
    }

    .landing-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg width="100" height="100" xmlns="http://www.w3.org/2000/svg"><defs><pattern id="grid" width="100" height="100" patternUnits="userSpaceOnUse"><path d="M 100 0 L 0 0 0 100" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
        opacity: 0.3;
    }

    .landing-content {
        position: relative;
        z-index: 1;
        color: white;
        padding: 4rem 0;
    }

    .landing-title {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        line-height: 1.2;
    }

    .landing-subtitle {
        font-size: 1.5rem;
        margin-bottom: 2rem;
        opacity: 0.95;
        font-weight: 300;
    }

    .landing-description {
        font-size: 1.125rem;
        margin-bottom: 3rem;
        opacity: 0.9;
        max-width: 600px;
    }

    .landing-cta {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .btn-landing {
        padding: 1rem 2rem;
        font-size: 1.125rem;
        font-weight: 600;
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-landing-primary {
        background: white;
        color: #667eea;
    }

    .btn-landing-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        color: #667eea;
    }

    .btn-landing-outline {
        background: transparent;
        color: white;
        border: 2px solid white;
    }

    .btn-landing-outline:hover {
        background: white;
        color: #667eea;
        transform: translateY(-2px);
    }

    .features-section {
        padding: 5rem 0;
        background: white;
    }

    .features-title {
        text-align: center;
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: var(--gray-800);
    }

    .features-subtitle {
        text-align: center;
        font-size: 1.125rem;
        color: var(--gray-600);
        margin-bottom: 4rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }

    .feature-card {
        padding: 2rem;
        border-radius: 12px;
        background: var(--gray-50);
        transition: all 0.3s ease;
        border: 1px solid var(--gray-200);
    }

    .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-lg);
        border-color: var(--primary-color);
    }

    .feature-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: white;
        margin-bottom: 1.5rem;
    }

    .feature-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 1rem;
        color: var(--gray-800);
    }

    .feature-description {
        color: var(--gray-600);
        line-height: 1.6;
    }

    .stats-section {
        padding: 4rem 0;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
        text-align: center;
    }

    .stat-item {
        padding: 2rem;
    }

    .stat-number {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .stat-label {
        font-size: 1.125rem;
        opacity: 0.9;
    }

    @@media (max-width: 768px) {
        .landing-title {
            font-size: 2.5rem;
        }

        .landing-subtitle {
            font-size: 1.25rem;
        }

        .features-grid {
            grid-template-columns: 1fr;
            padding: 0 1rem;
        }

        .landing-cta {
            flex-direction: column;
        }

        .btn-landing {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<!-- Hero Section -->
<section class="landing-hero">
    <div class="container">
        <div class="landing-content">
            <h1 class="landing-title">Organize Your Work,<br />Boost Your Productivity</h1>
            <p class="landing-subtitle">TaskBoard - The modern way to manage your tasks and collaborate with your team</p>
            <p class="landing-description">
                Streamline your workflow, track progress, and achieve your goals faster with our intuitive task management platform. 
                Built for teams who value efficiency and collaboration.
            </p>
            <div class="landing-cta">
                <a href="@Url.Action("Register", "Account")" class="btn-landing btn-landing-primary">
                    <i class="bi bi-person-plus"></i>
                    Get Started Free
                </a>
                <a href="@Url.Action("Login", "Account")" class="btn-landing btn-landing-outline">
                    <i class="bi bi-box-arrow-in-right"></i>
                    Sign In
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section">
    <div class="container">
        <h2 class="features-title">Everything You Need to Stay Organized</h2>
        <p class="features-subtitle">
            Powerful features designed to help you and your team work more efficiently
        </p>
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-kanban"></i>
                </div>
                <h3 class="feature-title">Kanban Boards</h3>
                <p class="feature-description">
                    Visualize your workflow with customizable Kanban boards. Drag and drop tasks to track progress and stay organized.
                </p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-people"></i>
                </div>
                <h3 class="feature-title">Team Collaboration</h3>
                <p class="feature-description">
                    Work together seamlessly with your team. Share workspaces, assign tasks, and communicate in real-time.
                </p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-bell"></i>
                </div>
                <h3 class="feature-title">Smart Notifications</h3>
                <p class="feature-description">
                    Stay updated with real-time notifications. Never miss an important update or deadline.
                </p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-graph-up"></i>
                </div>
                <h3 class="feature-title">Analytics & Insights</h3>
                <p class="feature-description">
                    Track your productivity with detailed analytics. Understand your workflow and optimize your performance.
                </p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-clock"></i>
                </div>
                <h3 class="feature-title">Time Tracking</h3>
                <p class="feature-description">
                    Monitor time spent on tasks and projects. Improve time management and productivity.
                </p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-shield-check"></i>
                </div>
                <h3 class="feature-title">Secure & Reliable</h3>
                <p class="feature-description">
                    Your data is safe with us. Enterprise-grade security ensures your information is protected.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="stats-section">
    <div class="container">
        <div class="stats-grid">
            <div class="stat-item">
                <div class="stat-number">10K+</div>
                <div class="stat-label">Active Users</div>
            </div>
            <div class="stat-item">
                <div class="stat-number">50K+</div>
                <div class="stat-label">Tasks Completed</div>
            </div>
            <div class="stat-item">
                <div class="stat-number">99.9%</div>
                <div class="stat-label">Uptime</div>
            </div>
            <div class="stat-item">
                <div class="stat-number">24/7</div>
                <div class="stat-label">Support</div>
            </div>
        </div>
    </div>
</section>
