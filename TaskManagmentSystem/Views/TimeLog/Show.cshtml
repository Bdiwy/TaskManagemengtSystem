@model IEnumerable<TaskManagmentSystem.ViewModels.TimeLogViewModel>

@{
    ViewData["Title"] = "Time Logs";
}

<div class="timelogs-page-wrapper">
    <div class="container-fluid timelogs-container">
        <!-- Header Section -->
        <div class="timelogs-header">
            <div class="header-content">
                <div class="title-section">
                    <h1 class="timelogs-title">
                        <i class="bi bi-clock-history"></i>
                        Time Logs
                    </h1>
                    <p class="timelogs-subtitle">Track time spent on your tasks</p>
                </div>
                <div class="header-actions">
                    <a asp-action="Create" class="btn btn-create">
                        <i class="bi bi-plus-circle-fill"></i>
                        <span>Log New Time</span>
                    </a>
                </div>
            </div>
        </div>

        <!-- Time Logs Content -->
        <div class="timelogs-content">
            @if (Model != null && Model.Any())
            {
                <!-- Time Logs Grid -->
                <div class="timelogs-grid">
                    @foreach (var log in Model)
                    {
                        <div class="timelog-card">
                            <div class="timelog-card-header">
                                <div class="timelog-info">
                                    <h3 class="timelog-task-title">
                                        <i class="bi bi-check2-square"></i>
                                        @if (log.Task != null)
                                        {
                                            @log.Task.Title
                                        }
                                        else
                                        {
                                            <span class="text-muted">Unknown Task</span>
                                        }
                                    </h3>
                                    <div class="timelog-meta">
                                        <span class="timelog-progress">
                                            <i class="bi bi-bar-chart-line-fill"></i>
                                            Progress: @log.Progress%
                                        </span>
                                    </div>
                                </div>
                                <div class="timelog-duration-badge">
                                    <span class="duration-badge">
                                        <i class="bi bi-stopwatch-fill"></i>
                                        @log.Actul min
                                    </span>
                                </div>
                            </div>

                            <div class="timelog-card-body">
                                <div class="timelog-stats">
                                    <div class="stat-item">
                                        <h6>Actual Time</h6>
                                        <p class="stat-value">@log.Actul minutes</p>
                                    </div>
                                    <div class="stat-item">
                                        <h6>Allocated Time</h6>
                                        <p class="stat-value">@log.Allocat minutes</p>
                                    </div>
                                    <div class="stat-item">
                                        <h6>Progress</h6>
                                        <p class="stat-value">@log.Progress%</p>
                                    </div>
                                </div>
                            </div>

                            <div class="timelog-card-footer">
                                <div class="timelog-actions">
                                    <a asp-action="Update" asp-route-id="@log.Id" class="btn btn-edit">
                                        <i class="bi bi-pencil-square"></i>
                                        <span>Edit</span>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@log.Id"
                                       class="btn btn-delete"
                                       onclick="return confirm('Are you sure you want to delete this time log entry?');">
                                        <i class="bi bi-trash3-fill"></i>
                                        <span>Delete</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Summary -->
                <div class="timelogs-summary">
                    <div class="summary-card">
                        <div class="summary-icon">
                            <i class="bi bi-stopwatch"></i>
                        </div>
                        <div class="summary-info">
                            <h4>Total Time Entries</h4>
                            <p class="summary-count">@Model.Count()</p>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- Empty State -->
                <div class="empty-state">
                    <div class="empty-state-content">
                        <div class="empty-icon">
                            <i class="bi bi-clock"></i>
                        </div>
                        <h3>No Time Logs Yet</h3>
                        <p>You haven't logged any time yet. Start tracking your work!</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- ============================================= -->
<!--               STYLES (same glassmorphism theme) -->
<!-- ============================================= -->
<style>
    :root {
        --primary-color: #6366f1;
        --primary-hover: #5855eb;
        --success-color: #10b981;
        --warning-color: #f59e0b;
        --danger-color: #ef4444;
        --purple-color: #8b5cf6;
        --text-primary: #1f2937;
        --text-secondary: #6b7280;
        --text-muted: #9ca3af;
        --border-color: #e5e7eb;
        --background-light: #f8fafc;
        --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
        --radius: 12px;
        --radius-sm: 8px;
    }

    .timelogs-page-wrapper {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        padding: 2rem 0;
    }

    .timelogs-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .timelogs-header {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: var(--radius);
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: var(--shadow-lg);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .timelogs-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        background: linear-gradient(135deg, var(--primary-color), var(--purple-color));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .timelogs-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
        gap: 2rem;
    }

    .timelog-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: var(--radius);
        box-shadow: var(--shadow-lg);
        border: 1px solid rgba(255, 255, 255, 0.2);
        transition: all 0.3s ease;
    }

        .timelog-card:hover {
            transform: translateY(-6px);
        }

    .timelog-card-header {
        background: linear-gradient(135deg, #f8fafc, #f1f5f9);
        padding: 1.5rem;
        border-bottom: 1px solid var(--border-color);
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }

    .timelog-task-title {
        font-size: 1.45rem;
        font-weight: 700;
        margin: 0 0 0.6rem 0;
        display: flex;
        align-items: center;
        gap: 0.6rem;
    }

    .timelog-meta {
        display: flex;
        gap: 1rem;
        font-size: 0.9rem;
        color: var(--text-muted);
    }

    .duration-badge {
        background: rgba(99, 102, 241, 0.1);
        color: var(--primary-color);
        padding: 0.5rem 1rem;
        border-radius: 999px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.4rem;
        border: 1px solid rgba(99, 102, 241, 0.2);
    }

    .timelog-card-body {
        padding: 1.5rem;
    }

    .timelog-stats {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
        text-align: center;
    }

    .stat-item h6 {
        font-size: 0.85rem;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 0.4rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .stat-value {
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--primary-color);
    }

    .timelog-card-footer {
        background: var(--background-light);
        padding: 1rem 1.5rem;
        border-top: 1px solid var(--border-color);
    }

    .timelog-actions {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .btn {
        padding: 0.7rem 1.2rem;
        border-radius: var(--radius-sm);
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
        text-decoration: none;
        border: 2px solid;
        justify-content: center;
        min-width: 120px;
    }

    .btn-edit {
        background: rgba(245, 158, 11, 0.1);
        color: var(--warning-color);
        border-color: var(--warning-color);
    }

        .btn-edit:hover {
            background: var(--warning-color);
            color: white;
        }

    .btn-delete {
        background: rgba(239, 68, 68, 0.1);
        color: var(--danger-color);
        border-color: var(--danger-color);
    }

        .btn-delete:hover {
            background: var(--danger-color);
            color: white;
        }

    /* Reuse your previous btn-create, empty-state, summary-card styles */
    /* ... copy them from your Teams view or keep in shared CSS ... */

    @@media (max-width: 768px) {
        .timelogs-grid {
            grid-template-columns: 1fr;
        }

        .timelog-stats {
            grid-template-columns: 1fr;
        }

        .timelog-actions {
            flex-direction: column;
        }
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .header-actions {
        display: flex;
        justify-content: flex-end;
    }

    .empty-state {
        min-height: 60vh;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    .empty-state-content {
        max-width: 400px;
    }
</style>